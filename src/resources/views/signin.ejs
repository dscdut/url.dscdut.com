<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head'); %>

  <body>
    <div id="app">
      <div id="app-logo">
        <img src="/img/logo.png" alt="DSC-DUT Logo" />
      </div>
      <div class="app-button-right">
        <a id="app-button-shorten" class="app-button" type="submit" href="./">Shorten URL</a>
      </div>
      <div id="app-container">
        <h1>Sign in to manage your URLs</h1>
        <form id="app-form">
          <input type="email" class="app-input" id="app-input-email" placeholder="Input your email" />
          <div class="app-input-container">
            <input type="password" id="app-input-password" class="app-input password"
              placeholder="Input your password" />
            <i id="icon-show-password" class="icon-show-password icon-signin far fa-eye fa-eye-slash"></i>
          </div>
          <div class="app-remember-forgot">
            <div class="app-remember-container">
              <input type="checkbox" class="checkbox" />
              <span>Remember me</span>
            </div>
            <a href="/forgot" class="forgot-password">Forgot your password?</a>
          </div>
          <button id="app-button-submit" class="app-button sign" type="submit">
            Sign in
          </button>
          <div class="app-link-sign">
            <span>Donâ€™t have an account? </span>
            <a href="/signup" class="link-sign">Sign up</a>
          </div>
        </form>
      </div>
      <%- include('./partials/loader'); %>
    </div>

    <%- include('./partials/gtag'); %>
      <%- include('./partials/script'); %>
        <script>
          $(document).ready(function () {
            $('#icon-show-password').click(function () {
              var password = $("#app-input-password")
              var isPasswordShow = password.prop("type") === "text";
              $(this).toggleClass("fa-eye-slash", isPasswordShow)
              password.attr("type", isPasswordShow ? "password" : "text")
            })
          })
        </script>
  </body>

</html>